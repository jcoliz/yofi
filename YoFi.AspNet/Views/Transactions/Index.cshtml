                        @(Model.ShowHidden?"Hide Hidden":"Show Hidden")
                    </a>
                    <a asp-action="Index" class="btn"
                       asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@Model.Parameters.Page"
                       asp-route-q="@Model.Parameters.Query"
